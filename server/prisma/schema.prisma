generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Empresa {
  id        String   @id @default(cuid())
  nome      String
  slug      String   @unique
  plano     String   @default("free")
  ownerId   String
  usuarios  Usuario[]
  equipes   Equipe[]
  tarefas   Tarefa[]
  createdAt DateTime @default(now())
}

model Usuario {
  id         String   @id @default(cuid())
  nome       String
  email      String
  senhaHash  String
  role       String   @default("member") // admin | manager | member
  isActive   Boolean  @default(true)
  empresaId  String
  empresa    Empresa  @relation(fields: [empresaId], references: [id], onDelete: Cascade)
  tarefasCriadas    Tarefa[] @relation("Criador")
  tarefasAtribuidas Tarefa[] @relation("Responsavel")
  equipesUsuario    UsuarioEquipe[]
  createdAt  DateTime @default(now())
  @@unique([email, empresaId])
}

model Equipe {
  id        String   @id @default(cuid())
  nome      String
  descricao String?
  empresaId String
  empresa   Empresa  @relation(fields: [empresaId], references: [id], onDelete: Cascade)
  membros   UsuarioEquipe[]
  createdAt DateTime @default(now())
}

model UsuarioEquipe {
  id        String  @id @default(cuid())
  usuarioId String
  usuario   Usuario @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  equipeId  String
  equipe    Equipe  @relation(fields: [equipeId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  @@unique([usuarioId, equipeId])
}

model Tarefa {
  id           String     @id @default(cuid())
  empresaId    String
  empresa      Empresa    @relation(fields: [empresaId], references: [id], onDelete: Cascade)
  titulo       String
  descricao    String?
  status       String     @default("todo") // todo | doing | blocked | review | done | archived
  prioridade   Int        @default(3) // 1-5
  dataVencimento DateTime?
  dataInicio   DateTime?
  dataConclusao DateTime?
  responsavelId String?
  responsavel   Usuario?   @relation("Responsavel", fields: [responsavelId], references: [id])
  criadorId     String
  criador       Usuario    @relation("Criador", fields: [criadorId], references: [id])
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}
